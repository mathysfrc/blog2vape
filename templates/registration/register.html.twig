{% extends 'base.html.twig' %}

{% block title %}
	{{ parent() }}
	|| Identification
{% endblock %}

{% block stylesheets %}
	{{ parent()}}
	{{ encore_entry_link_tags('connexion') }}
{% endblock %}
{% block body %}
	<section class="container">
		<h1 class="my-5 text-primary d-flex justify-content-center align-self-center text-uppercase">S'identifier</h1>

		{{ form_errors(registrationForm) }}

		{{ form_start(registrationForm) }}
		{{ form_row(registrationForm.email) }}
		{{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe'
        }) }}
		{{ form_row(registrationForm.agreeTerms) }}

		<button type="submit" class="btn btn-lg btn-outline-secondary text-primary my-5">S'enregistrer</button>
		{{ form_end(registrationForm) }}
	</section>
{% endblock %}
