<form method="post" action="{{ path('vape_favorites', {'id': vape.id}) }}">
	<input type="hidden" name="_token" value="{{ csrf_token('favorite' ~ vape.id) }}">
	<button class="btn fw-bold text-uppercase mb-5 mt-0 mx-2 rounded-0">
		{% if app.user.candidate %}
			<i class="bi fs-3 text-primary {{ app.user.candidate.isFavorite(vape) ? 'bi-heart-fill' : 'bi-heart' }}"></i>
		</button>
	{% endif %}
</form>